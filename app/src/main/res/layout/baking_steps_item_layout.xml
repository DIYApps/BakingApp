<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewShortDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/steps_layout_padding"
        tools:text="Short Description"
        style="@style/Base.TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="@dimen/steps_margin_start"
        android:layout_marginLeft="@dimen/steps_margin_start"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="@dimen/ingredients_quantity_end_start"
        android:layout_marginRight="@dimen/ingredients_quantity_end_start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewShortDescription"
        app:srcCompat="@color/divider" />
</android.support.constraint.ConstraintLayout>